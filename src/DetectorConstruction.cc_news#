  rot2->rotateY(0*deg);
  rot2->rotateZ(90*deg);

  for(G4int j=0; j<nBrickX_side3;j++){
    for(G4int i=0; i<nBrickZ_side3;i++){
      
      G4String ibrick_index_side3 = "Brick_side3_"+G4UIcommand::ConvertToString(j)+"_"+G4UIcommand::ConvertToString(i);
